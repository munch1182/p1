<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NumberHeightView">
        <!--已赋值的颜色-->
        <attr name="colorValued" format="color" />
        <!--未赋值的颜色-->
        <attr name="colorNoValue" format="color" />
        <!--要显示的数量-->
        <attr name="itemNumber" format="integer" />
        <!--值宽度-->
        <attr name="itemWidth" format="dimension" />
        <!--值间隔-->
        <attr name="itemSpace" format="dimension" />
        <!--最小高度，小于等于minValue值要显示的高度-->
        <attr name="minHeight" format="dimension" />
        <!--最大高度，大于等于maxValue值要显示的高度-->
        <attr name="maxHeight" format="dimension" />
        <!--最小值-->
        <attr name="minValue" format="float" />
        <!--最大值-->
        <attr name="maxValue" format="float" />

        <!--是否显示标尺-->
        <attr name="showRuler" format="boolean" />
        <!--中间标尺的宽度-->
        <attr name="rulerWidth" format="dimension" />
        <!--中间标尺的颜色-->
        <attr name="rulerColor" format="color" />
    </declare-styleable>
</resources>